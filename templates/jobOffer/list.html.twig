{% extends 'base.html.twig' %}

{% block title %}List{% endblock %}

{% block body %}
    <div class="box middle_eight padding_huge choosing_box login_with_SSO_page">
        <ul>
            {% for offert in jobOffers %}
                <li>
                    <div>
                        <p><strong>{{ offert.title }}</strong></p>
                        <p>{{ offert.description }}</p>
                        <div>
                            <p>{{ offert.createdAt|date("m/d/Y")}}</p>
                            <p>{{ offert.jobApplications|length }}</p>
                        </div>
                            {% set isRead = false %}
                            {% for application in offert.jobApplications %}
                               {% if application.isRead == false %}
                                   {% if isRead == false %}
                                       {% set isRead = true %}
                                   {% endif %}
                               {% endif %}
                            {% endfor %}
                        {% if isRead == true %}
                            <p>NOWE</p>
                        {% endif %}
                        <div>
                            <a href="{{ path('job_offer_show', {id: offert.id  }) }}" class="button_main">Otworz oferte</a>

                            <a href="{{ path('job_offer_edit', {id: offert.id  }) }}" class="button_main">Edytuj</a>
                            <a href="{{ path('job_offer_remove', {id: offert.id  }) }}" onclick="return confirm('Czy jesteś pewien ?')" class="button_main">Usuń</a>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}